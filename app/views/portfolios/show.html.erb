

<% 2.times do%>
    <div class="row"></div>
<% end %>

<div class="container">
    <div class="three columns">
        <form action="/portfolios/<%=@portfolio.id%>/stocks/new" method="get">
            <button class="gen_button" type="submit">Add Stock</button>
        </form>
        <%= button_to "All portfolios", portfolios_path, method: "get" %>
    </div>
    <div class="ten columns offset-by-two">
        <table>
            <tr>
                <th colspan="4" class="port_title"><%=@portfolio.name%> Portfolio</th>
            </tr>
            <tr>
                <th>Ticker</th>
                <th>Company</th>
                <th>Position</th>
            </tr>
            <% @details.each do |stock| %>
                <tr>
                    <td class="port_cell left_cell"><a href="/stocks/<%=stock["ticker"]%>"><%= stock["ticker"] %></a></td>
                    <td class="port_cell left_cell"><%= stock["name"] %></td>
                    <td class="port_cell left_cell"><%= stock["num_shares"]%></td>
                    <td class="port_cell">
                        <form action="/portfolios/<%=@portfolio.id%>/stocks/<%=stock["id"]%>" method="post">
                        <%= token_tag %>
                        <input type="hidden" name="_method" value="delete">
                        <input type="submit" value="Remove Stock">
                        </form>
                        <form action="/portfolios/<%=@portfolio.id%>/stocks/<%=stock["id"]%>/edit" method="get">
                        <input type="submit" value="Edit Stock">
                        </form>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>
    <% 3.times do %>
        <div class="row"></div>
    <% end %>
    <div class="three columns">
        <form action="/portfolios/<%=@portfolio.id%>" method="post">
            <%= token_tag %>
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete Portfolio">
        </form>
    </div>
    <div class="ten columns offset-by-five">
        <form action="/portfolios/analyze/<%=@portfolio.id%>" method="get">
            <input type="date" name="begin_date">
            <input type="date" name="end_date">
            <input type="submit">
        </form>
    </div>
</div>

