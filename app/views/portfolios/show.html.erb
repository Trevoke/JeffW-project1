

<% 2.times do%>
    <div class="row"></div>
<% end %>

<div class="container">
    <div class="three columns">
        <form action="/portfolios/<%=@portfolio.id%>/stocks/new" method="get">
            <button class="gen_button" type="submit">Add Stock</button>
        </form>
        <a href="/portfolios">All Portfolios</a>
    </div>
    <div class="ten columns offset-by-two">
        <table>
            <tr>
                <th colspan="3" class="port_title"><%=@portfolio.name%> Portfolio</th>
            </tr>
            <tr>
                <th>Ticker</th>
                <th>Company</th>
                <th>Position</th>
            </tr>
            <% @details.each do |stock| %>
                <tr>
                    <td class="port_cell left_cell"><%= stock["ticker"] %></td>
                    <td class="port_cell left_cell"><%= stock["name"] %></td>
                    <td class="port_cell"><%= stock["num_shares"]%></td>
                </tr>
            <% end %>
        </table>
    </div>
    <% 3.times do %>
        <div class="row"></div>
    <% end %>
    <div class="ten columns offset-by-five">
        <form action="/portfolios/analyze" method="get">
            <input type="date" name="begin_date">
            <input type="date" name="end_date">
            <input type="submit">
        </form>
    </div>
</div>

